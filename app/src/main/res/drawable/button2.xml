<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/background_light"/>
            <stroke
                android:width="1dp"
                android:color="@android:color/holo_green_light" />
            <corners
                android:radius="25dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <solid android:color="#C3D8AB"/>
            <stroke
                android:width="1dp"
                android:color="@android:color/holo_green_light" />
            <corners
                android:radius="25dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
            <!--<gradient android:angle="45" android:centerColor="#E7F3E7"
                android:endColor="#E7F3E7" android:startColor="#D7FCAE"
                android:type="sweep" />-->
        </shape>
    </item>
</selector>
