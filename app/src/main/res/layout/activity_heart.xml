<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HeartActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/questionBtn"
                    android:layout_marginLeft="340dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/question_mark_btn">
                </Button>
                <TextView
                    android:textSize="18dp"
                    android:id="@+id/textMon"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/fingerImage"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="300dp"
                    android:layout_height="240dp"
                    android:src="@drawable/bpm_image">

                </ImageView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/beatLayout"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/beatanim"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/heart_rate" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/end_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/bpmText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="BPM"
                        android:textSize="18dp"></TextView>

                    <SeekBar
                        android:id="@+id/bpmseekbar"
                        android:layout_width="340dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/bpmText"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:max="120"
                        android:progress="40"
                        android:progressDrawable="@drawable/custom_seekbar"
                        android:secondaryProgress="75"
                        android:thumb="@drawable/custom_thumb" />

                    <TextView
                        android:id="@+id/minBpmNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/bpmseekbar"
                        android:layout_marginLeft="54dp"
                        android:text="@string/min_bpm">

                    </TextView>

                    <TextView
                        android:id="@+id/maxBpmNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/bpmseekbar"
                        android:layout_marginLeft="330dp"
                        android:text="@string/max_bpm"></TextView>
                </RelativeLayout>
                <!--select icon-->
                <LinearLayout
                    android:layout_width="330dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/statusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Select Status"
                        android:textSize="18dp"></TextView>

                    <LinearLayout
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/icon_tab"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <RadioGroup
                            android:id="@+id/statusIcons"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/stableBtn"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/icon_stable"
                                android:button="@color/empty"
                                android:text="Stable"
                                android:textColor="@color/empty"></RadioButton>

                            <RadioButton
                                android:id="@+id/exciteBtn"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/icon_excite"
                                android:button="@color/empty"
                                android:text="Excite"
                                android:textColor="@color/empty"></RadioButton>

                            <RadioButton
                                android:id="@+id/runningBtn"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/icon_running"
                                android:button="@color/empty"
                                android:text="Run"
                                android:textColor="@color/empty"></RadioButton>

                            <RadioButton
                                android:id="@+id/depressBtn"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/icon_depress"
                                android:button="@color/empty"
                                android:text="Depres"
                                android:textColor="@color/empty"></RadioButton>

                            <RadioButton
                                android:id="@+id/sleepBtn"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/icon_sleep"
                                android:button="@color/empty"
                                android:text="Sleep"
                                android:textColor="@color/empty"></RadioButton>

                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnLayout2"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <Button
                            android:id="@+id/againBtn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_bpm_again"
                            android:padding="3dp"
                            android:text="again"
                            android:textColor="@color/white"
                            android:typeface="normal" />

                        <Button
                            android:id="@+id/storeBtn"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_history_graph"
                            android:padding="3dp"
                            android:text="STORE"
                            android:textColor="@color/white"
                            android:typeface="normal" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/firstBtn_layout"
                    android:layout_marginTop="30dp"
                    android:visibility="visible"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btnStart"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="10dp"
                        android:background="@drawable/btn_bpm_drawable"
                        android:padding="15dp"
                        android:text="BPM  측정하기"
                        android:textColor="@color/white"
                        android:typeface="normal" />

                    <Button
                        android:id="@+id/btnHistory"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="40dp"
                        android:background="@drawable/btn_history_drawable"
                        android:padding="15dp"
                        android:text="BPM 그래프"
                        android:textColor="@color/white"
                        android:typeface="normal"/>

                </LinearLayout>
            </LinearLayout>



        </LinearLayout>




    </ScrollView>





</LinearLayout>