<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".AEDActivity">

    <Button
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search AED Location" />
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/location_layout"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="150dp">
        </ListView>


        <ScrollView
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <fragment
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:visibility="invisible"
                    android:background="@android:color/holo_orange_dark"
                    android:id="@+id/select_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:padding="2dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/buildAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="buildAddress"
                        android:textColor="@android:color/white"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_marginTop="3dp"
                        android:id="@+id/buildPlace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:textColor="@android:color/white"
                        android:text="buildPlace"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/distance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:textColor="@android:color/white"
                        android:text="distance"
                        android:textSize="15dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/blogger_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Clerk Tel"
                            android:textColor="@android:color/white"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/textView6"
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:text="-" />

                        <TextView
                            android:id="@+id/clerkTel"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@android:color/white"
                            android:text="clerkTel"
                            android:textColorLink="@android:color/white"
                            android:autoLink="phone"
                            android:textStyle="bold"
                            android:textSize="15dp" />

                    </LinearLayout>

                </LinearLayout>




            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>